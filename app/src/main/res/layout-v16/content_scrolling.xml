<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ewansr.www.koobenapp.DetailRecipeActivity"
    tools:showIn="@layout/activity_detail_recipes">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitulo"
            android:text="Nombre Receta"
            android:textColor="@color/color_primario_cyan"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="13dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvIngredientes"
            android:text="Ingredientes"
            android:textColor="@color/darkorange"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/tvTitulo"
            android:layout_alignStart="@+id/tvTitulo"
            android:layout_below="@+id/tvTitulo"
            android:layout_alignRight="@+id/tvTitulo"
            android:layout_alignEnd="@+id/tvTitulo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvlistaIngredientes"
            android:text="Lista de ingredientes"
            android:layout_alignLeft="@+id/tvIngredientes"
            android:layout_alignStart="@+id/tvIngredientes"
            android:layout_below="@+id/tvIngredientes"
            android:layout_alignEnd="@+id/tvIngredientes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPreparacion"
            android:text="Modo de Preparación"
            android:textColor="@color/darkorange"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@+id/tvlistaIngredientes"
            android:layout_alignLeft="@+id/tvIngredientes"
            android:layout_alignStart="@+id/tvIngredientes"
            android:layout_alignRight="@+id/tvlistaIngredientes"
            android:layout_alignEnd="@+id/tvlistaIngredientes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvMetodoPreparacion"
            android:text="Metodo de preparación de la receta"
            android:layout_below="@+id/tvPreparacion"
            android:layout_alignLeft="@+id/tvlistaIngredientes"
            android:layout_alignStart="@+id/tvlistaIngredientes"
            android:layout_alignRight="@+id/tvPreparacion"
            android:layout_alignEnd="@+id/tvPreparacion" />


        <!--android:text="@string/large_text"-->
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
