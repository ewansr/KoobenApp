<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:orientation="horizontal"
    android:paddingLeft="7dp"
    android:paddingTop="7dp"
    android:paddingRight="7dp"
    android:paddingBottom="3.5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:id="@+id/cv"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="@color/color_Blanco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:id="@+id/recipe_image"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_name"
                android:textSize="14dp"
                android:text="Título"
                android:textColor="@color/color_Negro_transparente"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/menu_item_Planer"
                android:layout_toStartOf="@+id/menu_item_Planer"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/recipe_descripcion" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/menu_item_favoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_rate_white_18dp"
                app:fab_colorNormal="@color/color_primario_cyan"
                fab:fab_size="mini"
                fab:fab_label="Añadir a favoritos"
                android:layout_alignTop="@+id/recipe_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/menu_item_compartir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_white_18dp"
                app:fab_colorNormal="@color/color_primario_cyan"
                fab:fab_size="mini"
                fab:fab_label="Comprar"
                android:layout_below="@+id/recipe_descripcion"
                android:layout_toLeftOf="@+id/menu_item_favoritos"
                android:layout_toStartOf="@+id/menu_item_favoritos" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/menu_item_Planer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insert_invitation_white_18dp"
                app:fab_colorNormal="@color/color_primario_cyan"
                fab:fab_size="mini"
                fab:fab_label="Planear"
                android:layout_below="@+id/recipe_descripcion"
                android:layout_toLeftOf="@+id/menu_item_compartir"
                android:layout_toStartOf="@+id/menu_item_compartir" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/recipe_descripcion"
                android:layout_below="@+id/recipe_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:visibility="gone" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>