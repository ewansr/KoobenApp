<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/actions_padding"
    android:gravity="right"
    android:paddingLeft="@dimen/actions_padding_left"
    android:paddingRight="@dimen/actions_padding_left">

    <ImageButton
        android:id="@+id/ic1"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_search"
        android:background="?android:selectableItemBackground"
        style="@style/card.native.actions.button"
        android:layout_marginRight="8dp"
        />


    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/ic2"
        android:background="?android:selectableItemBackground"
        android:src="@android:drawable/btn_star_big_on"
        style="@style/card.native.actions.button"
        android:layout_marginRight="8dp"
        />

    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/ic3"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_share_white_18dp"
        style="@style/card.native.actions.button"
        android:layout_marginRight="8dp"
        />

</LinearLayout>